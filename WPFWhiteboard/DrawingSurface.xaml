<UserControl x:Class="WPFWhiteboard.DrawingSurface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWhiteboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="canvas" MouseMove="OnMouseMove" MouseDown="OnMouseDown" MouseLeave="OnMouseLeave" MouseEnter="OnMouseEnter"></Canvas>

        <TextBlock x:Name="info"></TextBlock>
    </Grid>
</UserControl>
